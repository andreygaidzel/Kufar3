<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css"/>
    <link href="~/Content/scroll.css" rel="stylesheet"/>
    <script src="~/Scripts/jquery-3.2.1.min.js"></script>
    <link href="~/Content/SiteDeclaration.css" rel="stylesheet"/>
</head>
@{
   // Html.Action("InitDropDownItems", "Base");
    SelectList regions = ViewBag.regions;
    SelectList cities = ViewBag.cities;
}
<body>
@*@Html.Action("LayoutHeader", "Home")*@
@Html.Partial("~/Views/Home/LayoutHeader.cshtml")

<div class="region">
    <b>Область:</b>
    @*@Html.DropDownList("Region", regions, new {id = "Region"})
    
    <b>Город:</b>
    @Html.DropDownList("City", cities, new {id = "CityId" })*@
</div>
<div class="container">
    <div class="menu">
        @*@Html.Partial("~/Views/Home/_CatalogMenu.cshtml")*@
        @Html.Action("MenuLeft", "Home")
    </div>
    <div class="content">
        @RenderBody()
    </div>
</div>
<script src="~/MyScripts/UploadImages.js"></script>
</body>
</html>

<script type="text/javascript">
    $(function()
    {
        $('#Region').change(function()
        {
            // получаем выбранный id
            var id = $(this).val();
            $.ajax({
                type: 'GET',
                url: '@Url.Action("GetCities", "Home")/' + id,
                success: function(data)
                {
                    console.log("vernulllCity", data);
                    // заменяем содержимое присланным частичным представлением
                    $('#CityId').replaceWith(data);
                }
            });
        });
    });
</script>