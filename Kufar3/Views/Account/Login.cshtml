@model Kufar3.ModelsView.LoginModel

@{
    Layout = null;
}

<div class="login-window">
    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @id = "registerFormId", @class = "form-horizontal", role = "form" }))
    {
        HtmlHelper.UnobtrusiveJavaScriptEnabled = false;

        @Html.ValidationSummary()
        @*<div>*@ @*<p>
                    <label>Email</label><br />
                    @Html.TextBoxFor(x => x.Email, null, new { id = "EmailLog", type = "Email" })
                </p>
                <p>
                    <label>Пароль</label><br />
                    @Html.TextBoxFor(x => x.Password, null, new { id = "PassLog", type = "password" })
