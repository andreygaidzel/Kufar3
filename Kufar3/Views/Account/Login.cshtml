                <p><button type="submit">Войти</button></p>
            </div>*@

        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", id = "EmailLog", type = "Email", name="Email" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger  " })
            </div>

        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", id = "PassLog", type = "password" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger " })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" />
            </div>
        </div>
    }
</div>
<script src="~/Scripts/script-custom-validator.js"></script>
